{
    "name": "digipolisgent/flanders-basicregisters",
    "description": "Package to access the Flanders Basic Registers (Vlaanderen Basisregisters).",
    "keywords": [
        "digipolisgent",
        "services",
        "flanders",
        "basic registers",
        "vlaanderen",
        "basisregisters"
    ],
    "homepage": "https://github.com/digipolisgent/php_package_dg-flanders-basicregisters",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Peter Decuyper",
            "email": "peter.decuyper@digipolis.gent"
        }
    ],
    "require": {
        "php": ">=7.2",
        "digipolisgent/api-client": "^1.1",
        "digipolisgent/value": "^1.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^2.3",
        "phpro/grumphp": "^0.15.2",
        "sebastian/phpcpd": "^4.1",
        "phpmd/phpmd": "^2.7",
        "phpstan/phpstan": "^0.11.15",
        "sensiolabs/security-checker": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "DigipolisGent\\Flanders\\BasicRegisters\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigipolisGent\\Tests\\Flanders\\BasicRegisters\\": "tests/"
        }
    },
    "scripts": {
        "grumphp": "vendor/bin/grumphp run --ansi",
        "phpcs": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit",
        "coverage": "vendor/bin/phpunit --coverage-html ./build/coverage",
        "phpstan": "vendor/bin/phpstan analyse --level=7 ./src",
        "post-install-cmd": "vendor/bin/grumphp git:init"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1-dev"
        }
    }
}
